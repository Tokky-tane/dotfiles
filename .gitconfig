[include]
  path = .gitconfig.user

[alias]
  a     = add
  aa    = add .
  ap    = add --patch
  b     = branch
  ba    = branch --all
  bm    = branch --merged
  bcl   = !git branch --delete $(git branch --merged | grep -v '*')
  co    = commit
  cof   = !git commit --fixup $(git-pick-from-log)
  com   = commit --message
  coa   = commit --amend
  coan  = commit --amend --no-edit
  ch    = checkout
  chb   = checkout -b
  chp   = cherry-pick
  chpa  = cherry-pick --abort
  chpc  = cherry-pick --continue
  i     = init
  cl    = clone
  st    = status --short --branch --show-stash
  l     = log --oneline --graph
  la    = log --oneline --graph --all
  lp    = log --patch
  ln    = log --oneline --graph --name-status
  d     = diff
  do    = !git diff origin/$(git branch --show-current)
  dw    = diff --ignore-all-space
  ds    = diff --staged
  dsw   = diff --staged --ignore-all-space
  r     = rebase
  ri    = rebase --interactive
  rc    = rebase --continue
  ra    = rebase --abort
  ss    = stash save
  ssk   = stash save --keep-index
  sp    = stash pop
  sa    = stash apply
  sw    = switch
  swc   = switch --create
  f     = fetch
  p     = pull
  ps    = !git push --set-upstream origin $(git branch --show-current)

[core]
  excludesfile = /Users/t_nakahara/.gitignore_global
  quotepath = false
  editor = vim

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
  blame = delta
  branch = less --quit-if-one-screen

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features = decorations line-numbers
  syntax-theme = Dracula

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax

[fetch]
  prune = true

[rebase]
  autoSquash = true
[init]
  defaultBranch = main
[url "git@github.com:"]
  insteadOf = https://github.com
[rerere]
  enabled = true
